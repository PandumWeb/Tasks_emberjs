<form>
	<div class="input-group">
		<label>Title</label>
	  {{input type="text" class="form-control" value=model.title placehold="Edit task"}}
	</div>
	<div class="input-group">
		<label>Due Date</label>
	  {{input type="date" class="form-control" value=model.date}}
	</div>
	<div class="input-group">
		<label>Description</label>
	  {{textarea class="form-control" value=model.description placehold="Describe task"}}
	</div>
	<button {{action 'editTask' model.id}} class="btn btn-primary">Submit</button>
</form>
